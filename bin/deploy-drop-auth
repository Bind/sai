#!/usr/bin/env bash
set -ex

# drop ownership of a deployed system

null="0x0000000000000000000000000000000000000000"

objects="$SAI_SAI
$SAI_SIN
$SAI_SKR
$SAI_TIP
$SAI_DAD
$SAI_MOM
$SAI_JAR
$SAI_TUB
$SAI_TAP
$SAI_TOP
"

seth send $SAI_MOM 'setRootUser(address,bool)' $ETH_FROM false
test $(seth call $SAI_MOM 'isUserRoot(address)(bool)' $ETH_FROM) = false

for object in $objects; do
    seth send $object 'setOwner(address)' $null
done
