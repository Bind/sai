#!/usr/bin/env bash
set -ex

# deploy script for the live and public sai deployment

# mainnet w-eth
# WETH="0xECF8F87f810EcF450940c9f60066b4a7a501d6A7"
# kovan w-eth
WETH="0x53eccc9246c1e537d79199d0c7231e425a40f896"

# mainnet medianizer
# MED="0x729D19f657BD0614b4985Cf1D82531c67569197B"
# kovan medianizer
MED="0xA944bd4b25C9F186A846fd5668941AA3d3B8425F"

SAI_PIP=$MED SAI_GEM=$WETH bin/deploy

CHAIN=$(seth chain)

. load-env-$CHAIN

##### configure risk params
# mat = 1.5 axe = 1.2 hat = 100,000,000 gap = 1 [but configurable, +/- 5%] 
# tax = way = 1 [default]

sai cuff 1.50
sai chop 1.20
sai cork 100000000.00


##### configure auth

# TODO: deploy multisig
SAI_MULTISIG="0x4f26ffbe5f04ed43630fdc30a87638d53d0b0876"

# pass cage(), cage(price), tap.jump ctrl to multisig
seth send $SAI_MOM "setUserRole(address,uint8,bool)" $SAI_MULTISIG 2 true
seth send $SAI_MOM "setRoleCapability(uint8,address,bytes4,bool)" 2 $SAI_TOP $(seth calldata 'cage(uint128)') true
seth send $SAI_MOM "setRoleCapability(uint8,address,bytes4,bool)" 2 $SAI_TOP $(seth calldata 'cage()') true
seth send $SAI_MOM "setRoleCapability(uint8,address,bytes4,bool)" 2 $SAI_TAP $(seth calldata 'jump(uint128)') true
